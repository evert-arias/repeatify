{
	"name": "repeatify",
	"version": "1.0.0",
	"description": "JavaScript/TypeScript library to run repetitive tasks with throttle control and other cool features",
	"author": "Evert Arias",
	"license": "MIT",
	"bugs": {
		"url": "https://github.com/evert-arias/repeatify/issues"
	},
	"homepage": "https://github.com/evert-arias/repeatify#readme",
	"keywords": [
		"nodejs",
		"typescript",
		"tasks",
		"throttle",
		"typescript-library",
		"taskscheduler"
	],
	"main": "index.js",
	"type": "module",
	"exports": "./dist/src/index.js",
	"engines": {
		"node": ">=14.16"
	},
	"scripts": {
		"test": "xo && ava",
		"release": "np",
		"build": "del-cli dist && tsc",
		"prepare": "npm run build"
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/evert-arias/repeatify.git"
	},
	"devDependencies": {
		"@ava/typescript": "^3.0.1",
		"@evert-arias/tsconfig": "^1.0.0",
		"@types/node": "^17.0.5",
		"ava": "^4.0.1",
		"node": "^17.3.0",
		"np": "^7.6.0",
		"npm-run-all": "^4.1.5",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.4",
		"xo": "^0.47.0"
	},
	"types": "dist/src",
	"sideEffects": false,
	"files": [
		"dist/src"
	],
	"ava": {
		"files": [
			"test/*"
		],
		"timeout": "1m",
		"extensions": {
			"ts": "module"
		},
		"nodeArguments": [
			"--loader=ts-node/esm"
		]
	},
	"xo": {
		"ignores": [
			"test/*"
		],
		"rules": {
			"@typescript-eslint/no-empty-function": "off",
			"node/no-deprecated-api": "off",
			"node/prefer-global/url": "off",
			"node/prefer-global/url-search-params": "off",
			"@typescript-eslint/no-implicit-any-catch": "off",
			"unicorn/prefer-node-protocol": "off",
			"ava/assertion-arguments": "off",
			"@typescript-eslint/no-unsafe-member-access": "off",
			"@typescript-eslint/no-unsafe-return": "off",
			"@typescript-eslint/no-unsafe-assignment": "off",
			"@typescript-eslint/no-unsafe-call": "off",
			"@typescript-eslint/await-thenable": "off",
			"no-lone-blocks": "off",
			"unicorn/no-await-expression-member": "off",
			"@typescript-eslint/comma-dangle": "off",
			"@typescript-eslint/object-curly-spacing": "off",
			"arrow-parens": "off"
		}
	}
}
